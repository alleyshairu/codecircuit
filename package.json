{
    "private": true,
    "type": "module",
    "scripts": {
        "portal:dev": "rm -rf public/portal/assets && vite --config resources/portal/vite.config.js dev",
        "portal:build": "vite --config resources/portal/vite.config.js build",
        "site:dev": "rm -rf public/site/assets && vite --config resources/site/vite.config.js dev",
        "site:build": "vite --config resources/site/vite.config.js build",
        "format:assets": "prettier --write 'resources/{site,portal}/**/*.{css,js,ts,tsx}'",
        "format:blade": "blade-formatter --wrap-line-length=140 --write 'resources/views/**/*.blade.php'"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.12",
        "@types/react": "^18.2.74",
        "@types/react-dom": "^18.2.24",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "blade-formatter": "^1.41.1",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "postcss-import": "^16.0.1",
        "prettier": "3.2.5",
        "tailwindcss": "^3.1.0",
        "typescript": "^5.4.4",
        "vite": "^5.0"
    },
    "dependencies": {
        "@github/details-menu-element": "^1.0.13",
        "@monaco-editor/react": "^4.6.0",
        "@tinymce/tinymce-react": "^5.0.1",
        "flowbite": "^2.3.0",
        "highlight.js": "^11.9.0",
        "highlightjs-line-numbers.js": "^2.8.0",
        "interweave": "^13.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
