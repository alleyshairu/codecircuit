{
    "private": true,
    "type": "module",
    "scripts": {
        "portal:dev": "rm -rf public/portal/assets && vite --config resources/portal/vite.config.js dev",
        "portal:build": "vite --config resources/portal/vite.config.js build",
        "site:dev": "rm -rf public/site/assets && vite --config resources/site/vite.config.js dev",
        "site:build": "vite --config resources/site/vite.config.js build",
        "format:assets": "prettier --write 'resources/{site,portal}/**/*.{css,js,ts,tsx}'",
        "format:blade": "blade-formatter --wrap-line-length=140 --write 'resources/views/**/**/*.blade.php'"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@types/react": "^18.2.74",
        "@types/react-dom": "^18.2.24",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "blade-formatter": "^1.41.1",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "postcss-import": "^16.0.1",
        "prettier": "3.2.5",
        "tailwindcss": "^3.1.0",
        "typescript": "^5.4.4",
        "vite": "^5.0"
    },
    "dependencies": {
        "@github/details-menu-element": "^1.0.13",
        "@tiptap/core": "^2.2.5",
        "@tiptap/extension-code-block-lowlight": "^2.2.6",
        "@tiptap/extension-heading": "^2.2.5",
        "@tiptap/extension-highlight": "^2.2.5",
        "@tiptap/extension-link": "^2.2.5",
        "@tiptap/extension-table": "^2.2.5",
        "@tiptap/extension-text-align": "^2.2.5",
        "@tiptap/extension-underline": "^2.2.5",
        "@tiptap/pm": "^2.2.5",
        "@tiptap/react": "^2.2.5",
        "@tiptap/starter-kit": "^2.2.5",
        "chart.js": "^4.4.2",
        "flowbite": "^2.3.0",
        "lowlight": "^3.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
